<h1>Books</h1>
<table>
	<tbody>
		<tr>
			<th>title</th>
			<th>body</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book) %><td>
			<td><%= link_to "Edit", edit_book_path(book) %><td>
			<td><%= link_to "Destroy", book_path(book), method: :delete %><td>
		</tr>
		<% end %>
	</tbody>
</table>

<!-- form_for部分 -->
<h3>New Book</h3>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>
    <h5>Title</h5>
    <%= f.text_field :title %>
    <h5>body</h5>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'createbook' %>
<% end %>

